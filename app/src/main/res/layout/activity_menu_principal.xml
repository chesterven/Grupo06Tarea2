<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".MenuPrincipal">
<TableLayout
android:layout_width="fill_parent"
android:layout_height="match_parent">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ingresar"
            android:textColor="@color/rojo"
            android:textStyle="bold"
            android:textSize="25dp" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:weightSum="4">

        <ImageView
            android:id="@+id/imagenPedido"
            android:layout_height="125dp"
            android:layout_width="75dp"
            android:layout_weight="4"
            tools:ignore="MissingConstraints"

            />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:weightSum="4">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content"
            android:text="@string/nombreyapellido"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="left"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4"
        android:gravity="center"
        android:layout_marginTop="15dp">

        <EditText
            android:id="@+id/nombreyApellidoUsuario"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"

            android:layout_weight="3.25"
            android:ems="10"
            android:gravity="center"
            android:inputType="text" />

        <ImageButton
            android:id="@+id/imgButtonMic"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginHorizontal="20dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_mic" />

    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:weightSum="4">


        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content"
            android:text="@string/llevar"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:gravity="center"/>
        <CheckBox
            android:id="@+id/checkBoxLlevar"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:text="" />


    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/botonGuardar"
            android:onClick="empezar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/borderedondo"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/guardarDatos" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:weightSum="4"
        android:layout_marginTop="50dp">

        <Button
            android:id="@+id/botonIniciar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:onClick="pasarOtra"
            android:background="@drawable/borderedondo"
            android:text="@string/iniciarPedido"
            android:textColor="@color/colorPrimaryDark"
            android:visibility="invisible" />
    </TableRow>




</TableLayout>
</ScrollView>